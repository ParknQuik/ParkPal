# Production Environment Configuration

# Server
PORT=3001
NODE_ENV=production

# Database (PostgreSQL for Production)
DATABASE_URL=postgresql://parkpal_prod:secure_password@db-host:5432/parkpal_prod

# Authentication
JWT_SECRET=REPLACE_WITH_STRONG_SECRET_generate_with_openssl_rand_base64_32
JWT_EXPIRATION=24h

# CORS
ALLOWED_ORIGINS=https://parkpal.com,https://app.parkpal.com

# Payment Gateway (Production)
STRIPE_SECRET_KEY=sk_live_REPLACE_WITH_LIVE_KEY
STRIPE_PUBLISHABLE_KEY=pk_live_REPLACE_WITH_LIVE_KEY

# Email Service (Production)
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASS=REPLACE_WITH_SENDGRID_API_KEY
SMTP_FROM=noreply@parkpal.com

# Logging
LOG_LEVEL=error

# Redis (Required for Production)
REDIS_URL=redis://redis-host:6379

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
SECURE_COOKIES=true
HELMET_ENABLED=true

# Monitoring
SENTRY_DSN=REPLACE_WITH_SENTRY_DSN
